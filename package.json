    "dev": "nodemon",
    "build": "rimraf dist && npx tsc",
    "prestart": "npm run build",
    "start": "node dist/src/server.js",
    "preserve": "npm run build",
    "serve": "concurrently \"npx tsc -w\"  \"nodemon dist/index.js\"",
    "test": "bun test --preload ./src/test.setup.ts",
    "lint": "eslint",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "npx drizzle-kit migrate",
    "db:studio": "npx drizzle-kit studio",
    "db:push": "npx drizzle-kit push",
    "db:testing:studio": "NODE_ENV=${NODE_ENV:=testing} drizzle-kit studio && echo $NODE_ENV",
    "db:testing:push": "NODE_ENV=${NODE_ENV:=testing} drizzle-kit push && echo $NODE_ENV",
    "db:testing:migrate": "NODE_ENV=${NODE_ENV:=testing} drizzle-kit migrate && echo $NODE_ENV",
